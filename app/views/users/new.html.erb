<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class = "error_messages">
      <p> Invalid submission. </p>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class = "field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class = "field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <p class = "button"> 
    <%= f.submit %>
  </p>

<% end %>
